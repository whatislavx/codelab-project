<%- include('../partials/header') %>

<main itemscope itemtype="https://schema.org/Course">
    
    <section class="course-hero">
        <div class="container">
            <span class="course-level"><%= course.level %></span>
            <h1 itemprop="name"><%= course.title %></h1>
            <p itemprop="description"><%= course.subtitle %></p>
            <div class="course-meta">
                <span class="course-rating"><%= course.rating %> (<%= course.reviewsCount %> reviews)</span>
                <span class="course-duration"><%= course.duration %></span>
                <span>Instructor: <a href="/instructors#<%= course.instructor.id %>" itemprop="author"><%= course.instructor.name %></a></span>
            </div>
        </div>
    </section>

    <div class="course-body-layout container">

        <div class="course-content-tabs">
            <nav class="tabs-nav">
                <ul>
                    <li><a href="#overview" class="active">Overview</a></li>
                    <li><a href="#curriculum">Curriculum</a></li>
                    <li><a href="#reviews">Reviews</a></li>
                </ul>
            </nav>

            <section id="overview" class="tab-panel active" itemprop="about">
                <h2>About this course</h2>
                <p><%= course.description %></p>
                
                <h3>What you will learn</h3>
                <ul>
                    <% course.whatYouWillLearn.forEach(item => { %>
                        <li><%= item %></li>
                    <% }) %>
                </ul>
            </section>

            <section id="curriculum" class="tab-panel">
                <h2>Course Curriculum</h2>
                <ul class="curriculum-list">
                    <li class="module"><span>Module 1</span><h3>Introduction</h3><span>2 hours</span></li>
                    <li class="module"><span>Module 2</span><h3>Core Concepts</h3><span>5 hours</span></li>
                    <li class="module"><span>Module 3</span><h3>Building Projects</h3><span>6 hours</span></li>
                </ul>
            </section>

            <section id="reviews" class="tab-panel">
                <h2>Student Reviews</h2>
                <article class="review" itemprop="review" itemscope itemtype="https://schema.org/Review">
                    <div class="review-author"><h4>Sarah Johnson</h4></div>
                    <div class="review-rating" itemprop="reviewRating" itemscope itemtype="https://schema.org/Rating"><meta itemprop="ratingValue" content="5">★★★★★</div>
                    <p itemprop="reviewBody">Excellent course! Very clear.</p>
                </article>
            </section>
        </div>

        <aside class="enroll-sidebar" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
            <div class="price-box">
                <span class="price-label">Price:</span>
                <span class="price-value" itemprop="price"><%= course.price %></span>
                <% if (course.price !== 'Free') { %>
                    <meta itemprop="priceCurrency" content="USD">
                <% } %>
            </div>
            <a href="/signup" class="btn-primary btn-full">Enroll now</a>
            <ul>
                <li><strong>Level:</strong> <span><%= course.level %></span></li>
                <li><strong>Duration:</strong> <span><%= course.duration %></span></li>
                <li><strong>Certificate:</strong> <span>Yes</span></li>
                <li><strong>Language:</strong> <span>English</span></li>
            </ul>
        </aside>

    </div>
</main>

<%- include('../partials/footer') %>